<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="-45dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/swipeToShowQR"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/euclid_circular"
            android:text="@string/green_certificate_tab_swipe"
            android:textColor="@color/grey_light" />

        <TextView
            android:id="@+id/surnameNameLabel"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/euclid_circular"
            android:text="@string/green_certificate_tab_surname_name"
            android:textColor="@color/grey_normal" />

        <TextView
            android:id="@+id/surnameNameText"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/euclid_circular_bold"
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/birthDateLabel"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/euclid_circular"
            android:text="@string/green_certificate_tab_birth_date"
            android:textColor="@color/grey_normal" />

        <TextView
            android:id="@+id/birthDateText"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/euclid_circular_bold"
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/certificateIDLabel"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/euclid_circular"
            android:text="@string/green_certificate_tab_certificate_id"
            android:textColor="@color/grey_normal" />

        <TextView
            android:id="@+id/certificateIDText"
            style="@style/H5Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/euclid_circular_bold"
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/moreDetails"
            style="@style/OnboardingKnowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/green_certificate_tab_more_details" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#1A495D74" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/downloadButton"
                style="@style/ButtonBottomRadius"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/green_certificate_tab_download"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconTint="" />

            <Button
                android:id="@+id/deleteButton"
                style="@style/RoundedButton.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/green_certificate_tab_delete"
                app:icon="@drawable/ic_cancel"
                app:iconGravity="textStart"
                app:iconTint=""/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>